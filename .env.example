# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_SUPABASE_PRIVILEGED_KEY=your-service-role-key

# Shopify Integration
# IMPORTANT: Use Admin API Access Token (shpat_*), NOT Client Secret (shpss_*)
# Get this from: Shopify Admin → Settings → Apps → Develop apps → Your App → API credentials
VITE_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
VITE_SHOPIFY_ADMIN_API_TOKEN=shpat_your_token_here
VITE_SHOPIFY_WEBHOOK_SECRET=your-webhook-secret
VITE_SHOPIFY_API_VERSION=2024-10

# For Vercel deployment, also set these (server-side only):
# SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
# SHOPIFY_ADMIN_API_TOKEN=shpat_your_token_here
# SHOPIFY_API_VERSION=2024-10

# Resend Email Service
VITE_RESEND_API_KEY=re_your_api_key_here
VITE_RESEND_FROM_EMAIL=orders@yourdomain.com

# Application
VITE_APP_URL=http://localhost:8080
